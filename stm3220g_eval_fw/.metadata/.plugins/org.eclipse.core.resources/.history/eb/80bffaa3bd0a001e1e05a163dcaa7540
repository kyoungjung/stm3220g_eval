#include "ap.h"

void led_isr2(void)
{
  ledToggle(_DEF_LED2);
}

void led_isr3(void)
{
  ledToggle(_DEF_LED3);
}

void led_isr4(void)
{
  ledToggle(_DEF_LED4);
}

void apInit(void)
{
  uartOpen(_DEF_UART1, 115200);
  uartOpen(_DEF_UART2, 115200);

  cliOpen(_DEF_UART1, 115200);
  cliOpenLog(_DEF_UART2, 115200);

  uartOpen(_DEF_UART2, 115200);

  timerSetPeriod(_DEF_HWTIMER1, 2000 * 1000);
  timerSetPeriod(_DEF_HWTIMER2, 1500 * 1000);
  timerSetPeriod(_DEF_HWTIMER3, 1000 * 1000);



  timerAttachInterrupt(_DEF_HWTIMER1, led_isr2);
  timerAttachInterrupt(_DEF_HWTIMER2, led_isr3);
  timerAttachInterrupt(_DEF_HWTIMER3, led_isr4);

  timerStart(_DEF_HWTIMER1);
  timerStart(_DEF_HWTIMER2);
  timerStart(_DEF_HWTIMER3);

}

void apMain(void)
{
  uint32_t pre_time;

  pre_time = millis();
  //초기에 설정된 baud 값을 저장한다.

  while(1)
  {
    if(millis() - pre_time >= 500)
    {
      pre_time = millis();
      ledToggle(_DEF_LED1);
    }

    cliMain();
  }
}
